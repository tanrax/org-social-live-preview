# Flask Server Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Docker port mapping (external:internal)
# External port - the port exposed on your host machine
EXTERNAL_PORT=8080

# Domain configuration (optional, for production deployments)
# Set this to your domain name when deploying to production
# Example: DOMAIN=preview.example.com
DOMAIN=localhost

# Cache timeout (in seconds)
# CACHE_TIMEOUT: Preview cards cache duration
# CACHE_FILE_TIMEOUT: Remote social.org files cache duration
CACHE_TIMEOUT=30
CACHE_FILE_TIMEOUT=30
